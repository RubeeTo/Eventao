<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".CreateEventAdmin">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white">

    <com.google.android.material.appbar.AppBarLayout
        android:id="@+id/appBarHeader"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/header"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/blue3"
            app:navigationIcon="@drawable/back_arrow"
            app:title="@string/txtCadastroEvento"
            app:titleTextColor="@color/white" />

    </com.google.android.material.appbar.AppBarLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@id/appBarHeader"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <Space style="@style/spaceTop" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Nome do evento" />

            <EditText
                android:id="@+id/editTextName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/txtExpNameEvent"
                style="@style/inputAddEvent"
                />

            <Space style="@style/spaceInput" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Nome do local " />

            <EditText
                android:id="@+id/editTextLocalName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/txtExpLocalEvent"
                style="@style/inputAddEvent"
                />

            <Space style="@style/spaceInput" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Rua e número" />

            <EditText
                android:id="@+id/editTextStreetNumber"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/txtExpStreet_number"
                style="@style/inputAddEvent"
                />

            <Space style="@style/spaceInput" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Cidade e estado" />

            <EditText
                android:id="@+id/editTextCityState"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/txtExpCity_State"
                style="@style/inputAddEvent"
                />

            <Space style="@style/spaceInput" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Dia do evento" />

            <EditText
                android:id="@+id/editTextDate"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/txtExpDateEvent"
                style="@style/inputAddEvent"/>

            <Space style="@style/spaceInput" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Hora do evento" />

            <EditText
                android:id="@+id/editTextHour"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/txtExpHourEvent"
                style="@style/inputAddEvent"/>

            <Space style="@style/spaceInput" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Descrição do evento" />

            <EditText
                android:id="@+id/editTextDescription"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/txtExpSynopsisEvent"
                style="@style/inputAddEvent"
                />

            <Space style="@style/spaceInput" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Imagem do evento" />

            <Space style="@style/spaceInput" />

            <TextView
                android:id="@+id/textFileUpload"
                style="@style/inputAddImage"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:navigationIcon="@drawable/image_up_icon" />

            <Space style="@style/buttonTop" />

            <Button
                android:id="@+id/buttonRegister"
                style="@style/buttonLg"
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:text="Cadastrar"/>

            <Space style="@style/buttonTop" />

        </LinearLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>
</FrameLayout>
