<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme.NoActionBar" parent="AppTheme">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="logoCabecalho">
        <item name="srcCompat">@drawable/logo_eventao</item>
        <item name="android:layout_marginTop">80dp</item>
        <item name="android:layout_marginBottom">50dp</item>
    </style>

    <style name="acessTitle">
        <item name="android:layout_marginBottom">25dp</item>
        <item name="android:textSize">16dp</item>
        <item name="android:textColor">@color/blue4</item>
        <item name="android:gravity">center_horizontal</item>
    </style>

    <style name="cancelink">
        <item name="android:layout_marginBottom">25dp</item>
        <item name="android:textSize">16dp</item>
        <item name="android:textColor">@color/gray1</item>
        <item name="android:gravity">center_horizontal</item>
    </style>
    
    <style name="inputlayout">
        <item name="android:textSize">14dp</item>
        <item name="android:background">@drawable/border_input</item>
        <item name="android:layout_marginBottom">10dp</item>
        <item name="android:padding">16dp</item>
        <item name="android:textColorHint">@color/gray0</item>
        <item name="android:drawablePadding">8dp</item>
    </style>

    <style name="inputPersonName" parent="inputlayout">
        <item name="android:drawableStart">@drawable/person_icon</item>
        <item name="android:hint">@string/txtNome</item>
    </style>

    <style name="inputEmail" parent="inputlayout">
        <item name="android:drawableStart">@drawable/email_icon</item>
        <item name="android:hint">@string/txtEmail</item>
    </style>

    <style name="inputPassword" parent="inputlayout">
        <item name="android:drawableStart">@drawable/password_icon</item>
        <item name="android:hint">@string/txtPassword</item>
    </style>

    <style name="inputCpf" parent="inputlayout">
        <item name="android:drawableStart">@drawable/cpf_icon</item>
        <item name="android:hint">@string/txtCpf</item>
    </style>

    <style name="inputLocal">
        <item name="android:drawableStart">@drawable/local_icon</item>
    </style>

    <style name="inputSeat">
        <item name="android:drawableStart">@drawable/seat_icon</item>
    </style>

    <style name="button">
        <item name="android:background">@drawable/btn</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">18dp</item>
        <item name="android:padding">16dp</item>
        <item name="android:layout_marginTop">40dp</item>
        <item name="android:layout_marginBottom">20dp</item>
    </style>

</resources>
